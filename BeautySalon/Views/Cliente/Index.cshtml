@model IEnumerable<CamadaDados.ClienteModel>

@{
    ViewBag.Title = "Index";
}


<style>
    .esconder {
        display: none;
    }
</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo Cliente", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idCliente }) |
                @Html.ActionLink("Details", "Details", new { id = item.idCliente }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idCliente })
            </td>
        </tr>
    }

</table>
